/* pages/my/my_follow/my_follow.wxss */
@import "/utils/common.wxss";
.my_follow_out{
  background-color: #f7f7f7;
  position: absolute;
  top:0;
  left:0;
  width:100%;
  min-height:100%;
  padding-top:94rpx;
  box-sizing: border-box;
}
.follow_lis{
  margin-top:26rpx;
  margin-bottom:26rpx;
  background-color: #fff;
  padding-top:12rpx;
  padding-bottom:12rpx;
}
.adviser_lis{
  margin-top:26rpx;
  margin-bottom:26rpx;
  background-color: #fff;
  padding-top:22rpx;
  padding-bottom:22rpx;
  border-radius:16rpx;
}
.follow_img_one{
  width:228rpx;
  height:152rpx;
  border-radius:12rpx;
}
.follow_img_two{
  width:140rpx;
  height:140rpx;
  border-radius:50%;
}
.adviser_left{
  padding-left:20rpx;
}
.follow_lis_middle{
  padding-left:20rpx;
  padding-right:20rpx;
  box-sizing: border-box;
  flex:1;
}
.follow_one{
  font-size:32rpx;
  color:#000;
  line-height:60rpx;
}
.follow_two{
  font-size:32rpx;
  color:#b52912;
  line-height:40rpx;
}
.text_one{
  height:60rpx;
}
.adviser_right{
  padding-left:46rpx;
  flex:1;
  box-sizing: border-box;
}
.follow_btn{
  height:50rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  border-radius:22rpx;
  font-size:26rpx;
  color:#b7770d;
  background-color:#e8b547d3;
  line-height:50rpx;
  text-align: center;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.follow_btn_hui{
  height:50rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  border-radius:22rpx;
  font-size:26rpx;
  color:#333;
  background-color:#fff;
  line-height:46rpx;
  text-align: center;
  margin-top:20rpx;
  margin-bottom:20rpx;
  box-sizing: border-box;
  border:2rpx solid #888;
}
.font_one{
  font-size:32rpx;
  color:#000;
}
.font_two{
  font-size:26rpx;
  color:#888;
  padding-left:20rpx;
}
.font_three{
  font-size:30rpx;
  color:#333;
  line-height:66rpx;
}
.icon_img{
  width:90rpx;
  height:90rpx;
  margin-top:-22rpx;
}
.adviser_mid_lis{
  width:76rpx;
  height:76rpx;
  border-radius: 50%;
  border:2rpx solid #999;
  margin-right:26rpx;
}
.adviser_mid_lis_text{
  line-height:76rpx;
  text-align: center;
  color:#999;
  font-size:50rpx;
  font-weight: bold;
}
.adviser_mid_lis_bot{
  height:90rpx;
  padding-right:90rpx;
}
.adviser_mid_lis_bot_text{
  font-size:24rpx;
  color:#666;
}