/* pages/signIn/signIn.wxss */
page{
  height:100%;
  overflow: hidden;
}
.signInout{
 width: 100%;
 height:100%; 
}
.imagesize{
  width: 100%;
 display:flex;
 height: 100%;
 justify-content: center;
 align-items:center;
}
.signInout_inner{
  position: absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
}
.userimg{
  margin:60rpx auto 0;
  border-radius: 50%;
  width:220rpx;
  height:220rpx;
  overflow: hidden;
}
.username{
  line-height:50rpx;
  text-align: center;
  color: #333;
  font-size:30rpx;
  margin:10rpx 0;
  padding:0 28rpx;
}
.lucktext{
  line-height:100rpx;
  text-align: center;
  color: #fff;
  font-size:54rpx;
}
.sign_btn{
  border-radius: 50%;
  width:280rpx;
  height:280rpx;
  overflow: hidden;
  position: absolute;
  bottom:24%;
  left:50%;
  margin-left:-140rpx;
  font-size: 64rpx;
  color:#333;
  line-height:280rpx;
  text-align: center;
}
.sign_btn_yellow{
  background-color: #ff9800;
}
.sign_btn_hui{
  background-color: #e8e8e8;
}